@model List<Model.EntityFramework.LichSuHoaHong>
@using Common
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_Layout.cshtml";
}


<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Quản lý hoa hồng</h1>
            </div>
        </div>
    </div>
</div>


<div class="content mt-3">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Lịch sử hoa hồng merchant</strong>
                    </div>


                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Cửa hàng</th>
                                    <th>Mã đơn hàng</th>
                                    <th>Thời gian</th>
                                    <th>Giá trị</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>Shop @item.ChiTietDonHang.Sach.Merchant.TenCuaHang</td>
                                        <td>
                                            @item.ChiTietDonHangID
                                        </td>
                                        <td>
                                            @item.ThoiDiem
                                        </td>
                                        <td>@item.GiaTriXu</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>


            </div>
        </div><!-- .row -->
    </div> <!-- .content -->
</div>





